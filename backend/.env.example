# 🤖 LLM PROVIDER CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Supports any OpenAI-compatible API (OpenAI, HuggingFace, Ollama, etc.)

# ┌─ OpenAI (Recommended) ──────────────────────────────────────────────────┐
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
# └─────────────────────────────────────────────────────────────────────────┘

# ┌─ HuggingFace (Alternative) ─────────────────────────────────────────────┐
# OPENAI_API_KEY=hf_your-huggingface-token-here
# OPENAI_BASE_URL=https://api-inference.huggingface.co/v1
# OPENAI_MODEL=meta-llama/Meta-Llama-3.1-8B-Instruct
# └─────────────────────────────────────────────────────────────────────────┘

# ┌─ Ollama (Local) ────────────────────────────────────────────────────────┐
# OPENAI_API_KEY=ollama
# OPENAI_BASE_URL=http://localhost:11434/v1
# OPENAI_MODEL=llama3.2
# └─────────────────────────────────────────────────────────────────────────┘

# ┌─ LLM Settings ──────────────────────────────────────────────────────────┐
LLM_TEMPERATURE=0.0                       # Model creativity (0.0 = deterministic)
LLM_MAX_TOKENS=                           # Max tokens per response (empty = model default)
LLM_TIMEOUT=60                            # Request timeout in seconds
LLM_MAX_RETRIES=2                         # Number of retries for failed requests
# └─────────────────────────────────────────────────────────────────────────┘


# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 📊 GRIST CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ┌─ Grist Instance ────────────────────────────────────────────────────────┐
GRIST_BASE_URL=https://docs.getgrist.com
# For DINUM: https://grist.numerique.gouv.fr
# For self-hosted: https://your-grist-instance.com
# └─────────────────────────────────────────────────────────────────────────┘


# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 🚀 APPLICATION CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ┌─ Environment ───────────────────────────────────────────────────────────┐
ENVIRONMENT=development                   # development | staging | production
LOG_LEVEL=INFO                           # DEBUG | INFO | WARNING | ERROR
# └─────────────────────────────────────────────────────────────────────────┘

# ┌─ API Server ────────────────────────────────────────────────────────────┐
API_HOST=0.0.0.0
API_PORT=8000
# └─────────────────────────────────────────────────────────────────────────┘


# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 🤖 AI AGENT SETTINGS
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ┌─ Agent Behavior ────────────────────────────────────────────────────────┐
AGENT_MAX_ITERATIONS=15                   # Max tool calls per request
AGENT_VERBOSE=true                        # Detailed logging for debugging
# └─────────────────────────────────────────────────────────────────────────┘


